@model JobPortal.Models.JobSearch
@{
    ViewBag.Title = "UserProfile_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserProfile_Pageload</h2>
@using (Html.BeginForm("SearchJob_Click", "UserProfile", FormMethod.Post))
{
    <table style="width: 100%; border: 1px solid lightgray; background-color: LightGray;">
    <tr>
        <td style="width: 25%; padding-right: 10px;">
            @Html.TextBoxFor(m => m.insertse.Job_Skills,
            new { @style = "width: 100%;", placeholder = "Skills" })
        </td>

        <td style="width: 25%; padding-right: 10px;">
            @Html.TextBoxFor(m => m.insertse.Job_Experience,
            new { @style = "width: 100%;", placeholder = "Experience" })
        </td>

        <td style="width: 25%; padding-right: 10px;">
            @Html.TextBoxFor(m => m.insertse.Job_Location,
            new { @style = "width: 100%;", placeholder = "Location" })
        </td>

        <td style="width: 25%; text-align: right;">
            <input type="submit" value="Search"
                   class="buttons"
                   style="background-color: navy; color: white; padding: 5px 10px;" />
            </td>
        </tr>
    </table>
}

<br />

<table class="table w3-container">
    <tr>
        <th><label>Company</label></th>
        <th><label>Job</label></th>
        <th><label>Description</label></th>
        <th><label>Experience</label></th>
        <th><label>Skills</label></th>
        <th><label>Salary</label></th>
        <th><label>End Date</label></th>
        <th><label>Location</label></th>
        <th></th>
    </tr>

    @foreach (var item in Model.selectjob)
    {
<tr>
    <td>@Html.DisplayFor(modelItem => item.Company_id)</td>
    <td>@Html.DisplayFor(modelItem => item.Job_Title)</td>
    <td>@Html.DisplayFor(modelItem => item.Job_description)</td>
    <td>@Html.DisplayFor(modelItem => item.Job_Experience)</td>
    <td>@Html.DisplayFor(modelItem => item.Job_Skills)</td>
    <td>@Html.DisplayFor(modelItem => item.Job_Salary)</td>
    <td>@item.Job_enddate.ToString("MM/dd/yyyy")</td>
    <td>@Html.DisplayFor(modelItem => item.Job_Location)</td>
    <td>
        @Html.ActionLink("ApplyNow","Application_load","AddApplication",new { jid = item.Job_id, cid = item.Company_id },new { @class = "button", style = "background-color: green; color: white; padding: 5px 10px; border-radius: 5px; text-decoration:none;" }
        )
    </td>
</tr>}
</table>
